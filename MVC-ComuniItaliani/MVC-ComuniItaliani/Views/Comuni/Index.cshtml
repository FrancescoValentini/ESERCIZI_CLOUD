@using MVC_ComuniItaliani.ViewModels
@model ComuniISTATElencoComuniViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Comuni Italiani</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Elenco dei Comuni Italiani</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Codice Catastale</th>
                    <th>Denominazione in Italiano</th>
                    <th>Ripartizione Geografica</th>
                    <th>Denominazione Regione</th>
                    <th>Denominazione Unità Sovracomunale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comune in Model.ElencoComuni) {
                        <tr>
                            <td>@comune.CodiceCatastaleComune</td>
                            <td>@comune.DenominazioneItaliano</td>
                            <td>@comune.RipartizioneGeografica</td>
                            <td>@comune.DenominazioneRegione</td>
                            <td>@comune.DenominazioneUnitaSovracomunale</td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</body>
</html>
